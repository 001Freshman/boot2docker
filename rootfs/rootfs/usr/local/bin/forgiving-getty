#!/bin/sh
set -e

usage() {
	self="$(basename "$0")"
	cat <<-EOUSAGE
		usage: $self <tty>
		   ie: $self ttyS0
		       $self ttyS1
	EOUSAGE
}

tty="$1"
if ! shift || [ -z "$tty" ]; then
	usage >&2
	exit 1
fi

# https://github.com/systemd/systemd/blob/6a47fd894d601f7e8e88dec4cb35dfb7d7c15eff/src/getty-generator/getty-generator.c#L94-L116
verify_tty() {
	local dev="/dev/$1"
	test -r "$dev" || return 1
	exec 42<"$dev" || return 1
	local ret=1
	if test -t 42; then
		ret=0
	fi
	exec 42<&- || return 1
	return "$ret"
}

while true; do
	if verify_tty "$tty"; then
		/sbin/getty -l /usr/local/bin/autologin 9600 "$tty" vt100
	else
		sleep 10
	fi
done
